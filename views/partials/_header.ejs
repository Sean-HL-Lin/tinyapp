<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!username) {%>
      <form class='form-inline' action="/login" method="POST">
        <div class='form-group mx-sm-3 mb-2'>
          <input type="text" name="username" class="form-control" placeholder="Enter your username here">
        </div>
        <button class='btn btn-primary mb-2'>login</button>
      </form>
    <% }  else { %> 
      <form class='form-inline' action="/logout" method="POST">
        <h4> Logged in As: <%= username %></h4>
        <div class='form-group mx-sm-3 mb-2'>
          <input class='d-none' class="form-control" type="text" name="username" value= <%= username %>>
        </div>
        <button class='btn btn-primary mb-2'>logout</button>
      </form>
    <% }%>
  </nav>
</header>